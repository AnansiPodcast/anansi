{
  "name": "Anansi",
  "version": "0.0.1",
  "description": "A Podcast app for Desktop",
  "main": "index.js",
  "config": {
    "electronVersion": "1.1.0",
    "certificate": "SÃ©rgio Vilar (RBM6L57NMB)"
